{
  "compilerOptions": {
    "target": "ES2020",                                 
    "module": "commonjs",                               
    "rootDir": "api",                                   
    "resolveJsonModule": true,                          
    "allowJs": true,                                    
    "outDir": "./dist",                               
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "noImplicitAny": true,                              
    "skipLibCheck": true                                
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "api/**/*.ts"
  ],
}
